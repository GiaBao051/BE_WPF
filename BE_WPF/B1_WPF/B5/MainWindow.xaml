<Window x:Class="B5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:B5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10,10,10,0" Height="200" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="140"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Ô bên trái: dùng StackPanel để xếp label và textbox -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="5,5,5,5">
            <Label Content="Họ tên:"/>
            <TextBox x:Name="txtHoTen" Width="180" LostFocus="TextBox_LostFocus"/>

            <Label Content="Tuổi:"/>
            <TextBox x:Name="txtTuoi" Width="180" LostFocus="TextBox_LostFocus"/>
        </StackPanel>

        <!-- Ô bên phải: có thể thêm control khác hoặc danh sách -->
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="5,5,5,5">
            <Label Content="Ghi chú:"/>
            <TextBox x:Name="txtGhiChu" Height="80" LostFocus="TextBox_LostFocus"/>
        </StackPanel>

        <Button Content="Thông tin"
            HorizontalAlignment="Center"
            Margin="0,10,0,10"
            Grid.Row="1"
            VerticalAlignment="Top"
            Height="35"
            Width="300"
            Grid.ColumnSpan="2"
            Click="Button_Click"/>
    </Grid>

</Window>
