<Window x:Class="B1_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:B1_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontWeight="{Binding MaxWidth, ElementName=checkBox}" Background="#FFECD25A">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Họ và tên" Height="80" Width="245" Foreground="#FFFD0000" FontFamily="Segoe WP Black" FontSize="50" HorizontalAlignment="Center"/>
        <TextBox x:Name="txt_nhapTen" TextWrapping="Wrap" Width="286" HorizontalAlignment="Center" Background="#FF79BFE4" Foreground="#FFFDF643" VerticalAlignment="Center"/>
        <Button Content="Bấm dô để chào!" Width="118" Background="#FFE3EC4E" Foreground="#FFC83838" Click="Button_Click_1"/>
        <TextBlock x:Name="txt_xuatTen" TextWrapping="Wrap" Foreground="#FF646CEF" FontSize="25" Width="593" FontFamily="Times New Roman" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>

    </StackPanel>

</Window>
