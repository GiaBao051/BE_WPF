<Window x:Class="Cinema.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cinema"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>

        <!-- MÀU -->
        <SolidColorBrush x:Key="GheTrong" Color="LightGray"/>
        <SolidColorBrush x:Key="GheDangChon" Color="LightSkyBlue"/>
        <SolidColorBrush x:Key="GheDaBan" Color="Gold"/>

        <!-- STYLE + TRIGGER -->
        <Style x:Key="SeatStyle" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Tag" Value="0"/>
            <Setter Property="Background" Value="{StaticResource GheTrong}"/>
            <Setter Property="IsEnabled" Value="True"/>

            <Style.Triggers>

                <!-- Ghế trống -->
                <Trigger Property="Tag" Value="0">
                    <Setter Property="Background"
                            Value="{StaticResource GheTrong}"/>
                    <Setter Property="IsEnabled" Value="True"/>
                </Trigger>

                <!-- Ghế đang chọn -->
                <Trigger Property="Tag" Value="1">
                    <Setter Property="Background"
                            Value="{StaticResource GheDangChon}"/>
                    <Setter Property="IsEnabled" Value="True"/>
                </Trigger>

                <!-- Ghế đã bán -->
                <Trigger Property="Tag" Value="2">
                    <Setter Property="Background"
                            Value="{StaticResource GheDaBan}"/>
                    <Setter Property="IsEnabled" Value="False"/>
                </Trigger>

            </Style.Triggers>
        </Style>

    </Window.Resources>

    <!-- ================= UI ================= -->
    <Grid Background="#F2F2F2">
        <Border Margin="20"
                Padding="20"
                Background="#E0E0E0"
                CornerRadius="15">

            <StackPanel>

                <!-- TIÊU ĐỀ -->
                <TextBlock Text="MÀN ẢNH"
                           Foreground="Orange"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <!-- GHẾ -->
                <UniformGrid Rows="3" Columns="5" Margin="0,0,0,15">
                    <Button Content="1"  Style="{StaticResource SeatStyle}" Click="Seat_Click"/>
                    <Button Content="2"  Style="{StaticResource SeatStyle}" Click="Seat_Click"/>
                    <Button Content="3"  Style="{StaticResource SeatStyle}" Click="Seat_Click"/>
                    <Button Content="4"  Style="{StaticResource SeatStyle}" Click="Seat_Click"/>
                    <Button Content="5"  Style="{StaticResource SeatStyle}" Click="Seat_Click"/>

                    <Button Content="6"  Style="{StaticResource SeatStyle}" Click="Seat_Click"/>
                    <Button Content="7"  Style="{StaticResource SeatStyle}" Click="Seat_Click"/>
                    <Button Content="8"  Style="{StaticResource SeatStyle}" Click="Seat_Click"/>
                    <Button Content="9"  Style="{StaticResource SeatStyle}" Click="Seat_Click"/>
                    <Button Content="10" Style="{StaticResource SeatStyle}" Click="Seat_Click"/>

                    <Button Content="11" Style="{StaticResource SeatStyle}" Click="Seat_Click"/>
                    <Button Content="12" Style="{StaticResource SeatStyle}" Click="Seat_Click"/>
                    <Button Content="13" Style="{StaticResource SeatStyle}" Click="Seat_Click"/>
                    <Button Content="14" Style="{StaticResource SeatStyle}" Click="Seat_Click"/>
                    <Button Content="15" Style="{StaticResource SeatStyle}" Click="Seat_Click"/>
                </UniformGrid>

                <!-- THÀNH TIỀN -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="Thành tiền:"
                               Width="90"
                               VerticalAlignment="Center"/>
                    <TextBox x:Name="txtThanhTien"
                             Width="200"
                             IsReadOnly="True"/>
                </StackPanel>

                <!-- NÚT -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Content="Chọn"
                            Width="90"
                            Margin="5"
                            Click="BtnChon_Click"/>
                    <Button Content="Hủy bỏ"
                            Width="90"
                            Margin="5"
                            Click="BtnHuy_Click"/>
                    <Button Content="Kết thúc"
                            Width="90"
                            Margin="5"
                            Click="BtnKetThuc_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>
