<Window x:Class="Resource.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Resource"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <!-- Style cho TextBox -->
        <Style x:Key="MyTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#E8F0FE"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#5B9BD5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>

        <!-- Style cho Button -->
        <Style x:Key="MyButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Tiêu đề -->
        <TextBlock Text="Thông tin"
                   FontSize="22" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="156,10,156,19.5" Foreground="#2C3E50" 
                   Grid.Row="0" />
        <Border     Grid.Row="1"
                    CornerRadius="12"
                    BorderBrush="LightSteelBlue"
                    BorderThickness="2"
                    Padding="15"
                    Margin="0,10,20,-281">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#ffffff" Offset="0"/>
                    <GradientStop Color="#d6eaf8" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="10">
                <!-- Cột -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="245"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="345"/>
                </Grid.ColumnDefinitions>

                <!-- Hàng -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Họ tên -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Nhập họ tên"
                   VerticalAlignment="Center"/>

                <TextBox x:Name="txtYourName" Tag="Họ và tên"
                 Grid.Row="0" Grid.Column="2"
                 Height="45" LostFocus="txtYourName_LostFocus" Style="{StaticResource MyTextBoxStyle}"/>

                <Label x:Name="lblNameError"
               Grid.Row="1" Grid.Column="2"
               Foreground="Red"
               FontSize="12" Margin="10"/>

                <!-- Năm sinh -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Năm sinh"
                   VerticalAlignment="Center"/>

                <TextBox x:Name="txtYear" Tag="Năm sinh"
                 Grid.Row="2" Grid.Column="2"
                 Height="45" LostFocus="txtYear_LostFocus" Style="{StaticResource MyTextBoxStyle}" />

                <Label x:Name="lblYearError"
               Grid.Row="3" Grid.Column="2"
               Foreground="Red"
               FontSize="12" Margin="10"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,15,0,0">

                    <Button x:Name="btnShow"
            Content="Hiển thị"
            Width="140"
            Height="43"
            Margin="5" Click="btnShow_Click" Style="{StaticResource MyButtonStyle}"/>

                    <Button x:Name="btnClear"
            Content="Xóa"
            Width="140"
            Height="43"
            Margin="5" Click="btnClear_Click"  Style="{StaticResource MyButtonStyle}"/>

                    <Button x:Name="btnExit"
            Content="Thoát"
            Width="140"
            Height="43"
            Margin="5" Click="btnExit_Click"  Style="{StaticResource MyButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>
