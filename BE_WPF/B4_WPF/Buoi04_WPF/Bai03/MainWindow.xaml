<Window x:Class="Bai03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bai03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel >
        <!--Menu-->
        <Menu DockPanel.Dock="Top">
            <!--Menu hệ thông-->
            <MenuItem Header="Hệ thống">
                <MenuItem Header="Đăng nhập"/>
                <MenuItem Header="Đổi mật khẩu"/>
                <MenuItem Header="Thoát (đóng chương trình)"/>
            </MenuItem>
            
            <!--Menu danh mục-->
            <MenuItem Header="Danh mục">
                <MenuItem Header="Sinh viên"/>
                <MenuItem Header="Lớp học"/>
            </MenuItem>
            
        </Menu>

        <!--ToolBar Tray-->
        <ToolBarTray DockPanel.Dock="Top"
                     Orientation="Horizontal">
            <ToolBar>
                <Button Content="Add"/>
                <Button Content="Delete"/>
                <Button Content="Exit"/>
            </ToolBar>
        </ToolBarTray>

        <!-- Nội dung chính -->
        <ContentControl x:Name="MainControl">

        </ContentControl>
    </DockPanel>
</Window>
