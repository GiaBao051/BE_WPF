    <DockPanel>

        <!-- Menu dock Top -->
        <Menu DockPanel.Dock="Top" Height="30">
            <MenuItem Header="Hệ thống">
                <MenuItem Header="Đăng nhập"/>
                <Separator/>
                <MenuItem Header="Thoát"/>
                <MenuItem Header="MenuItem"/>
            </MenuItem>
            <MenuItem Header="Danh mục">
                <MenuItem Header="Nhân viên"/>
                <MenuItem Header="Phòng ban"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar dock Top dưới Menu -->
        <ToolBarTray DockPanel.Dock="Top" Height="30">
            <ToolBar>
                <Button Content="Thêm"/>
                <Button Content="Xóa"/>
                <Button Content="Sửa"/>
            </ToolBar>
        </ToolBarTray>

        <!-- Sidebar dock Left -->
        <StackPanel DockPanel.Dock="Left" Width="120" Background="LightBlue">
            <Button Content="Item 1"/>
            <Button Content="Item 2"/>
        </StackPanel>

        <!-- Nội dung chính chiếm phần còn lại -->
        <Grid Background="LightGray">
            <TextBlock Text="Nội dung chính"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="24"/>
        </Grid>

    </DockPanel>
</Window>
