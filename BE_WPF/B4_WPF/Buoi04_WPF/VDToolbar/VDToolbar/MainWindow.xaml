<Window x:Class="VDToolbar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VDToolbar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>

        <!-- MENU -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New"/>
                <MenuItem Header="Open"/>
                <MenuItem Header="Exit"/>
            </MenuItem>
        </Menu>

        <!-- TOOLBAR TRAY -->
        <ToolBarTray DockPanel.Dock="Top"
                 Orientation="Horizontal">

            <ToolBar>

                <!-- Button -->
                <Button Width="60" Content="New">
                    <Button.ToolTip>
                        <ToolTip Content="Tạo mới" ToolTipService.InitialShowDelay="0"/>
                    </Button.ToolTip>
                </Button>
                <Button Content="Send"/>
                <Button Content="Exit"/>
                <Button Width="60" Content="Save">
                    <Button.ToolTip>
                        <ToolTip Content="Lưu dữ liệu" ToolTipService.InitialShowDelay="0"/>
                    </Button.ToolTip>
                </Button>

                <Separator/>

                <!-- ToggleButton hiển thị bật/tắt -->
                <ToggleButton Width="60" Content="Bold">
                    <ToggleButton.ToolTip>
                        <ToolTip Content="Bật / tắt in đậm" ToolTipService.InitialShowDelay="0"/>
                    </ToggleButton.ToolTip>
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Setter Property="Background" Value="LightGray"/>
                            <Style.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Background" Value="LightGreen"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>

                <Separator/>
              <!-- ComboBox -->
                <ComboBox Width="100">
                    <ComboBox.ToolTip>
                        <ToolTip Content="Chọn chế độ" ToolTipService.InitialShowDelay="0"/>
                    </ComboBox.ToolTip>
                    <ComboBoxItem Content="Mode 1"/>
                    <ComboBoxItem Content="Mode 2"/>
                    <ComboBoxItem Content="Mode 3"/>
                </ComboBox>

                <Separator/>

                <!-- TextBox -->
                <TextBox Width="120">
                    <TextBox.ToolTip>
                        <ToolTip Content="Nhập nhanh nội dung" ToolTipService.InitialShowDelay="0"/>
                    </TextBox.ToolTip>
                </TextBox>

                <Separator/>

                <!-- Image -->
                <Image Width="24" Height="24" Source="icon.jpg">
                    <Image.ToolTip>
                        <ToolTip Content="Icon minh họa" ToolTipService.InitialShowDelay="0"/>
                    </Image.ToolTip>
                </Image>

            </ToolBar>

        </ToolBarTray>

        <!-- NỘI DUNG CHÍNH -->
        <Grid Height="177" Width="430">
            <TextBlock Text="Nội dung chương trình"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="18"/>
        </Grid>

    </DockPanel>
</Window>
