<Window x:Class="TreeViewDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeViewDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <!-- TreeView -->
        <TreeView Name="tvData"
                  SelectedItemChanged="tvData_SelectedItemChanged" Margin="70,0,0,60">

            <!-- Items: danh sách nút gốc -->
            <TreeViewItem Header="Công ty"
                          IsExpanded="True">

                <!-- Items: nút con -->
                <TreeViewItem Header="Phòng Kế toán">

                    <TreeViewItem Header="Nhân viên A"/>
                    <TreeViewItem Header="Nhân viên B"/>
                </TreeViewItem>

                <TreeViewItem Header="Phòng Kỹ thuật">
                    <TreeViewItem Header="Nhân viên C"/>
                </TreeViewItem>
                <TreeViewItem Header="Itemcon"  IsExpanded="True">
                    <TreeViewItem Header="123"/>
                </TreeViewItem>

            </TreeViewItem>
            <TreeViewItem Header="Hội đồng" IsSelected="True" IsExpanded="True">
                <TreeViewItem Header="TreeViewItem"/>
                <TreeViewItem Header="TreeViewItem"/>
            </TreeViewItem>
            <TreeViewItem Header="TreeViewItem" IsExpanded="True">
                <TreeViewItem Header="TreeViewItem"/>
            </TreeViewItem>
            <TreeViewItem Header="Quản trị" IsExpanded="True">
                <TreeViewItem Header="TreeViewItem"/>
            </TreeViewItem>

        </TreeView>
    </Grid>
</Window>
