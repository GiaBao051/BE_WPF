<Window x:Class="Bai02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bai02"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Width="750"
          Height="400">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!--Cột 1-->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Mã phòng"
                       FontSize="15"
                       Margin="10,0,0,0"/>
            <TextBox x:Name="txtPhongBan" 
                     Width="220"
                     Margin="10"/>
            <TextBlock Text="Tên phòng ban"
                       FontSize="15"
                       Margin="10,0,0,0"/>
            <TextBox x:Name="txtMaPhong" Width="220"
                     Margin="10"/>
            <Button Content="Thêm phòng ban"
                    Margin="10"
                    Width="200" Click="Button_Click"/>
        </StackPanel>
        
        <!--Cột 2-->
        <StackPanel Grid.Column="1">
            <TextBlock Text="Phòng ban"
                       FontSize="15"
                       Margin="10,0,0,0"/>
            <TreeView x:Name="tvPhongBan" 
                      Width="400"
                      Height="150"
                      HorizontalAlignment="Left"
                      SelectedItemChanged="tvPhongBan_SelectedItemChanged">
                
            </TreeView>

            <GroupBox Header="THÔNG TIN PHÒNG ĐÃ CHỌN"
                      Margin="0,10,0,0"
                      Width="500"
                      Height="150"
                      HorizontalAlignment="Left">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                           Content="Phòng ban"/>
                    <Label Grid.Column="0"
                           Content="Mã phòng"
                           Margin="0,30,0,0"/>
                    <StackPanel Grid.Column="1">
                        <TextBlock x:Name="lbPB1" 
                                   Width="250"
                                   Height="20"
                                   Margin="5"
                                   HorizontalAlignment="Left"
                                   Background="LightYellow"/>
                        <TextBlock x:Name="lbMPB" 
                                   Width="250"
                                   Height="20"
                                   HorizontalAlignment="Left"
                                   Margin="5,5,0,0"
                                   Background="LightYellow"/>
                        <Button x:Name="btn_Close" 
                                Content="Thoát"
                                Width="50"
                                Margin="100,20,0,0"
                                Click="Button_Click_1"/>

                    </StackPanel>
                    
                </Grid>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
