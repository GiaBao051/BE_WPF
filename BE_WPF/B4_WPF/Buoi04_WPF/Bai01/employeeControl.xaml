<UserControl x:Class="Bai01.employeeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bai01"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        
        <GroupBox Header="Quản lý nhân viên"
                  FontSize="20"
                  Width="750"
                  Height="370"
                  FontWeight="Bold"
                  BorderBrush="Blue">
            <StackPanel>
                <TextBlock Text="Mã nhân viên"
                           Margin="20,20,0,10"/>
                <TextBox Width="700"
                         Height="30"/>
                <TextBlock Text="Họ tên"
                           Margin="20,20,0,10"/>
                <TextBox Width="700"
                         Height="30"/>
                <TextBlock Text="Điện thoại"
                           Margin="20,20,0,10"/>
                <TextBox Width="700"
                         Height="30"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Content="Lưu"
                            Width="70"
                            Height="30"
                            Margin="30"/>
                    <Button Content="Thoát"
                            Width="70"
                            Height="30"
                            Margin="30"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        
    </Grid>
</UserControl>
