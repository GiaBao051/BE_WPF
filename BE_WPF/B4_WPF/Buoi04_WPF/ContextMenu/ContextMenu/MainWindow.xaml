<Window x:Class="ContextMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContextMenu"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtInput"
                 Width="250"
                 Height="40"
                 Text="Chuột phải vào đây"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left" Margin="150,64,0,0">

            <!-- CONTEXT MENU -->
            <TextBox.ContextMenu>
                <ContextMenu
                    x:Name="ctxMenu" >

                    <!-- MENU ITEM 1 -->
                    <MenuItem
                        Header="Copy"
                        Click="Copy_Click"
                        IsEnabled="True"
                        InputGestureText="Ctrl + C"
                        ToolTip="Sao chép nội dung">
                        <MenuItem.Icon>
                            <Image Source="icon.jpg" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <!-- MENU ITEM 2 -->
                    <MenuItem
                        Header="Paste"
                        Click="Paste_Click"
                        IsEnabled="True"
                        InputGestureText="Ctrl + V"
                        ToolTip="Dán nội dung">
                        <MenuItem.Icon>
                            <Image Source="icon.jpg" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <Separator/>

                    <!-- MENU ITEM 3 -->
                    <MenuItem
                        Header="Clear"
                        Click="Clear_Click"
                        IsEnabled="True"
                        ToolTip="Xóa toàn bộ nội dung">
                        <MenuItem.Icon>
                            <Image Source="icon.jpg" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>

                </ContextMenu>
            </TextBox.ContextMenu>

        </TextBox>
        <Button Content="Button" HorizontalAlignment="Left" Height="70" Margin="110,319,0,0" VerticalAlignment="Top" Width="225">
            <Button.ContextMenu>
                <ContextMenu
            x:Name="ctxButton">


                    <MenuItem Header="Thêm"/>
                    <MenuItem Header="Sửa"/>
                    <MenuItem Header="Xóa"/>

                </ContextMenu>
            </Button.ContextMenu>
        </Button>

        <Button Content="Button" Margin="435,314,115,50">
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Thêm"
                      Click="Add_Click"
                      IsEnabled="True"
                      InputGestureText="Ctrl + N"
                      ToolTip="Thêm mới">
                        <MenuItem.Icon>
                            <Image Source="icon.jpg" Width="16"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Header="Sửa"
                      Click="Edit_Click"
                      IsEnabled="False"
                      ToolTip="Chưa chọn dữ liệu"/>

                    <MenuItem Header="Xóa"
                      Click="Delete_Click"
                      InputGestureText="Del"/>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
    </Grid>
</Window>
