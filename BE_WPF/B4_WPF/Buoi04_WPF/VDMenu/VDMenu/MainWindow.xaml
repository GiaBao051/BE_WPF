<Window x:Class="VDMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VDMenu"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,10,19">
        <Menu VerticalAlignment="Top">
            <MenuItem Header="File"
                  ToolTip="Menu File"
                  InputGestureText="Ctrl+F" >
                <!-- Menu con -->
                <MenuItem Header="New"
                      Click="MenuItem_New_Click"
                      IsEnabled="True"
                        
                     ToolTip="Tạo mới file"
                      InputGestureText="Ctrl+N">
                    <MenuItem.Icon>
                        <Image Source="icon.jpg" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Open"
                      Click="MenuItem_Open_Click"
                      IsEnabled="True"
                      ToolTip="Mở file"
                      InputGestureText="Ctrl+O" IsCheckable="True"/>

                <MenuItem Header="Exit"
                      Click="MenuItem_Exit_Click"
                      IsEnabled="False"
                      Visibility="Visible"
                      ToolTip="Thoát ứng dụng"/>
                <MenuItem Header="MenuItem"/>
                <MenuItem Header="MenuItem"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
