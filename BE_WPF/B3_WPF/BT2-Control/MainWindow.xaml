<Window x:Class="BT2_Control.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BT2_Control"
        mc:Ignorable="d"
        Title="Thông tin cá nhân" Height="565" Width="800">
    <TabControl x:Name="tabMain" Margin="15">

        <!-- TAB 1 -->
        <TabItem Header="Nhập thông tin">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="30">


                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Họ tên -->
                    <TextBlock Text="Họ và tên:"
                               VerticalAlignment="Center"/>
                    <TextBox x:Name="txtTen"
                             Grid.Column="1"
                             Height="28"/>

                    <!-- Nghề -->
                    <TextBlock Text="Nghề nghiệp:"
                               Grid.Column="2"
                               VerticalAlignment="Center"/>
                    <TextBox x:Name="txtNghe"
                             Grid.Column="3"
                             Height="28"/>

                    <!-- Giới tính -->
                    <TextBlock x:Name="lblGioiTinh"
                               Text="Giới tính:"
                               Grid.Row="1"
                               VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="1"
                                Grid.Column="1"
                                Orientation="Horizontal"
                                Margin="0,4">
                        <RadioButton x:Name="rdNam"
                                     Content="Nam"
                                     Margin="0,0,20,0"/>
                        <RadioButton x:Name="rdNu"
                                     Content="Nữ"/>
                    </StackPanel>

                    <!-- Quốc tịch -->
                    <TextBlock Text="Quốc tịch:"
                               Grid.Row="1"
                               Grid.Column="2"
                               VerticalAlignment="Center"/>
                    <ComboBox x:Name="cboQuocTich"
                              Grid.Row="1"
                              Grid.Column="3"
                              Height="28">
                        <ComboBoxItem Content="Việt Nam"/>
                        <ComboBoxItem Content="Mỹ"/>
                        <ComboBoxItem Content="Nhật Bản"/>
                        <ComboBoxItem Content="Hàn Quốc"/>
                        <ComboBoxItem Content="Pháp"/>
                    </ComboBox>

                    <!-- Ngày sinh -->
                    <TextBlock Text="Ngày sinh:"
                               Grid.Row="2"
                               VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpNgaySinh"
                                Grid.Row="2"
                                Grid.Column="1"
                                Height="28"/>

                    <!-- Sở thích -->
                    <TextBlock x:Name="lblSoThich"
                               Text="Sở thích:"
                               Grid.Row="3"
                               VerticalAlignment="Top"/>

                    <UniformGrid Grid.Row="3"
                                 Grid.Column="1"
                                 Columns="2"
                                 Margin="0,4">
                        <CheckBox x:Name="chkDocSach" Content="Đọc sách"/>
                        <CheckBox x:Name="chkNhac" Content="Nghe nhạc"/>
                        <CheckBox x:Name="chkTheThao" Content="Thể thao"/>
                        <CheckBox x:Name="chkDuLich" Content="Du lịch"/>
                    </UniformGrid>

                    <!-- Kỹ năng (ListBox chọn nhiều) -->
                    <TextBlock Text="Kỹ năng:"
                               Grid.Row="4"
                               VerticalAlignment="Top"/>
                    <ListBox x:Name="lstKyNang"
                             Grid.Row="4"
                             Grid.Column="1"
                             SelectionMode="Multiple"
                             Height="100"
                             Margin="0,4">
                        <ListBoxItem Content="C#"/>
                        <ListBoxItem Content="Java"/>
                        <ListBoxItem Content="Python"/>
                        <ListBoxItem Content="Web"/>
                    </ListBox>

                    <!-- Ghi chú -->
                    <TextBlock Text="Ghi chú:"
                               Grid.Row="5"
                               VerticalAlignment="Top"/>
                    <TextBox x:Name="txtGhiChu"
                             Grid.Row="5"
                             Grid.Column="1"
                             Grid.ColumnSpan="3"
                             Height="90"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"/>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="6"
                                Grid.ColumnSpan="4"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,25,0,0">
                        <Button Content="Xem thông tin"
                                Width="140"
                                Height="36"
                                Margin="15,0"
                                Click="BtnXem_Click"/>
                        <Button Content="Nhập lại"
                                Width="140"
                                Height="36"
                                Margin="15,0"
                                Click="BtnReset_Click"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </TabItem>

        <!-- TAB 2 -->
        <TabItem Header="Xem thông tin đã nhập">
            <Border Padding="30">
                <StackPanel>
                    <TextBlock x:Name="lblTenKQ" FontSize="14"/>
                    <TextBlock x:Name="lblNgheKQ" FontSize="14"/>
                    <TextBlock x:Name="lblGioiTinhKQ" FontSize="14"/>
                    <TextBlock x:Name="lblNgaySinhKQ" FontSize="14"/>
                    <TextBlock x:Name="lblQuocTichKQ" FontSize="14"/>
                    <TextBlock x:Name="lblSoThichKQ" FontSize="14"/>
                    <TextBlock x:Name="lblKyNangKQ" FontSize="14"/>
                    <TextBlock x:Name="lblGhiChuKQ"
                               FontSize="14"
                               TextWrapping="Wrap"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </TabItem>

    </TabControl>
</Window>
