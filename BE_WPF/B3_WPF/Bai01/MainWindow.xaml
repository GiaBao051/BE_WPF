<Window x:Class="Bai01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bai01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Width="400" 
          Background="LightBlue">
        <TextBlock Text="Nhập Thông Tin"
                   HorizontalAlignment="Center"
                   Margin="25"
                   FontSize="25"
                   FontWeight="Black"/>
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <Grid>
                <Label Content="Họ đệm:"/>
                <TextBox x:Name="textBox1"
                         Width="200"
                         Height="20"
                         HorizontalAlignment="Left" 
                         Margin="100,0,0,0 "/>
            </Grid>
            <Grid>
                <Label Content="Tên:"/>
                <TextBox x:Name="textBox2"
                         Width="200" 
                         Height="20" 
                         HorizontalAlignment="Left" 
                         Margin="100,0,0,0 "/>
            </Grid>
            <Grid>
                <Label Content="Giới tính:"/>
                <RadioButton x:Name="radNam" Content="Nam" 
                             Margin="100, 5, 0, 0"></RadioButton>
                <RadioButton x:Name="radNu" Content="Nữ" 
                             Margin="200, 5, 0, 0"></RadioButton>
            </Grid>
            <Grid>
                <Label Content="Ngoại ngữ:"/>
                <CheckBox x:Name="chkAnh"
                          Content="Tiếng Anh"
                          Margin="100, 6, 0, 0"/>
                <CheckBox x:Name="chkTrung"
                          Content="Tiếng Trung"
                          Margin="200, 6, 0, 0"/>
            </Grid>
            <Grid>
                <Label Content="Quê quán"/>
                <ComboBox x:Name="cbbQueQuan" Width="200" 
                          Margin="100, 0, 0, 0">
                    <ComboBoxItem Content="Hà Nội"></ComboBoxItem>
                    <ComboBoxItem Content="TPHCM"></ComboBoxItem>
                    <ComboBoxItem Content="An Giang"></ComboBoxItem>
                </ComboBox>
            </Grid>
            <Grid>
                <Button Content="Xem thông tin" 
                        Width="100" 
                        Height="50" 
                        Margin="10,80,200,10 " 
                        Click="Button_Click"></Button>
                <Button Content="Nhập lại" 
                        Width="100" 
                        Height="50" 
                        Margin="200,80,10,10 " Click="Button_Click_1"></Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
