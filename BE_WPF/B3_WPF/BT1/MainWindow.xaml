<Window x:Class="BT1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BT1"
        mc:Ignorable="d"
        Title="Control" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Họ đệm -->
        <TextBlock Text="Họ đệm:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtHoDem" Grid.Row="0" Grid.Column="1" Margin="5" />

        <!-- Tên -->
        <TextBlock Text="Tên:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtTen" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <!-- Giới tính -->
        <TextBlock Text="Giới tính:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
            <RadioButton x:Name="radNam" Content="Nam" Margin="5"/>
            <RadioButton x:Name="radNu" Content="Nữ" Margin="5"/>
        </StackPanel>

        <!-- Ngoại ngữ -->
        <TextBlock Text="Ngoại ngữ:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
            <CheckBox x:Name="chkAnh" Content="Tiếng Anh" Margin="5"/>
            <CheckBox x:Name="chkTrung" Content="Tiếng Trung" Margin="5"/>
        </StackPanel>

        <!-- Quê quán -->
        <TextBlock Text="Quê quán:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
        <ComboBox x:Name="cboQueQuan" Grid.Row="4" Grid.Column="1" Margin="5">
            <ComboBoxItem Content="Hà Nội"/>
            <ComboBoxItem Content="TP. Hồ Chí Minh"/>
            <ComboBoxItem Content="Đà Nẵng"/>
            <ComboBoxItem Content="Hải Phòng"/>
        </ComboBox>

        <!-- Nút -->
        <StackPanel Grid.Row="5" Orientation="Horizontal"
                    HorizontalAlignment="Left" Margin="20" Grid.Column="1">
            <Button Content="Xem thông tin" Width="120" Margin="5"
                    Click="btnXem_Click" Height="60"/>
            <Button Content="Nhập lại" Width="120" Margin="5"
                    Click="btnNhapLai_Click" Height="60"/>
        </StackPanel>
    </Grid>
</Window>
