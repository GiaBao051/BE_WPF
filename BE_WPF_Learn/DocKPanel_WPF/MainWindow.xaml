<Window x:Class="DocKPanel_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocKPanel_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel <!--LastChildFill="True"--> >
        <Button DockPanel.Dock="Bottom" Content="1" FontSize="100" ></Button>
        <Button DockPanel.Dock="Top" Content="2" FontSize="100" ></Button>
        <Button DockPanel.Dock="Right" Content="3" FontSize="100" ></Button>
        <Button DockPanel.Dock="Left" Content="4" FontSize="100" ></Button>
        <Button Content="5" FontSize="100" ></Button>
    </DockPanel>
</Window>
