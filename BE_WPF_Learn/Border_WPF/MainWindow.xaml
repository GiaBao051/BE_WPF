<Window x:Class="Border_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Border_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Border BorderBrush="Blue" BorderThickness="20 20 20 10" Width="100" Height="250">
                <StackPanel Background="Red">
                    <Button Content="1" FontSize="50" ></Button>
                    <Button Content="2" FontSize="50" ></Button>
                    <Button Content="3" FontSize="50" ></Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
