<Window x:Class="SliderBar_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SliderBar_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Slider x:Name="sldMain" Maximum="100" Value="50"/>
        <TextBox x:Name="txbSliderValue" Text="{Binding Path=Value, ElementName=sldMain}"></TextBox>
    </StackPanel>
</Window>
